<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Screenbackground"
    tools:context=".AdvanceCalcu"
    android:padding="16dp">

    <!-- RelativeLayout for TextView Display -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <TextView
            android:id="@+id/operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLines="2"
            android:scrollHorizontally="true"
            style="@style/TextColor"
            android:textSize="45sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <!-- TextView for displaying total/result -->
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/operation"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLines="1"
            style="@style/TextColor"
            android:textSize="50sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:thumb="@drawable/thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:track="@drawable/track"/>


        <!-- You can add a button for Light/Dark mode toggle here if needed -->
    </RelativeLayout>

    <!-- GridLayout for buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:useDefaultMargins="true"
        android:padding="0dp">

        <!-- First Row -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAc"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="AC"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfucn"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="⌫"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnpercent"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="%"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="÷"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Second Row -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="7"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="8"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="9"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="×"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Third Row (4, 5, 6, -) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="4"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="5"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="6"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="-"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- Fourth Row (1, 2, 3, +) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="1"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="2"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="3"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="+"
            android:textColor="@color/orange"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Third Row (4, 5, 6, -) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_deci"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="."
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_zero"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:text="0"
            style="@style/TextColor"
            android:background="@drawable/operationbox"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:text="="
            android:textColor="@color/black"
            android:background="@drawable/operationbox"
            android:backgroundTint="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold" />

    </GridLayout>

</LinearLayout>

