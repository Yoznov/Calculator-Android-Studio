<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AdvanceCalcu">

    <!-- RelativeLayout to position Button inside TextView -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="right|bottom"
            android:hint="0"
            android:textColor="@color/black"
            android:textSize="45dp"
            android:textStyle="bold" />

        <!-- Toggle Button for Light/Dark Mode inside the TextView -->
        <Button
            android:id="@+id/btn_toggle_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dark mode"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:rowCount="5"
        android:columnCount="4"
        android:background="@color/white"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:useDefaultMargins="true"
        android:padding="0dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAc"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/operationbox"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnpercent"
            android:layout_height="90dp"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_divide"
            android:layout_height="90dp"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfucn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text=" ."
            android:background="@drawable/baseline_backspace_24"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_height="90dp"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="90dp"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_height="90dp"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiply"
            android:layout_height="90dp"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_height="90dp"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_height="90dp"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_height="90dp"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_minus"
            android:layout_height="90dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_height="90dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_height="90dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_height="90dp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_plus"
            android:layout_height="90dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_zero"
            android:layout_height="90dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_deci"
            android:layout_height="90dp"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="cls"
            android:background="@drawable/operationbox"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_equals"
            android:layout_height="90dp"
            android:text="="
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/operationbox"
            android:layout_width="wrap_content"/>

    </GridLayout>





</LinearLayout>